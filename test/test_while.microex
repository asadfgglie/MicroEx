%%%
 %% Test while-loop statement.
%%%

program test_while
begin
    declare a[10], i as integer;
    declare b as bool;

    %% basic while loop
    %% while condition will only compute one time!
    %% use variable instead of expression
    b := true;
    while (b)
        a[i] := i * i;
        
        i := i + 1;
        if (i < 10) then
            b := true;
        else
            b := false;
        endif
    endwhile
end